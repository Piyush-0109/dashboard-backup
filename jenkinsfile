pipeline {
    agent any

    stages {
        stage('Installing Requirements') {
            steps {
                sh '''
                pip install -r requirement.txt
                '''
            }
        }
        stage('Running Backup') {
            steps {
                sh '''
                echo 'DATADOG_API_KEY'
                python3 dashboard_backup.py DATADOG_API_KEY DATADOG_APP_KEY AWS_ACCESS_KEY_ID AWS_SECRET_ACCESS_KEY
                '''
            }
        }
    }
}
