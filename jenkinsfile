pipeline {
    agent any
    triggers {
        cron('0 22 * * *')
    }

    stages {
        stage('Installing Requirements') {
            steps {
                sh '''
                pip install -r requirement.txt
                '''
            }
        }
        stage('Running Backup') {
            steps {
                sh '''
                python3 dashboard_backup.py ${DATADOG_API_KEY} ${DATADOG_APP_KEY} ${AWS_ACCESS_KEY_ID} ${AWS_SECRET_ACCESS_KEY} ${S3_BUCKET_NAME}
                '''
            }
        }
    }
}
